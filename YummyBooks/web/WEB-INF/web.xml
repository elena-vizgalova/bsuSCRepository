<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
    <context-param>
        <description>The relative path to style.css file</description>
        <param-name>styleCssPath</param-name>
        <param-value>css/style.css</param-value>
    </context-param>
    <context-param>
        <description>The relative path to book images</description>
        <param-name>bookImagePath</param-name>
        <param-value>img/books/</param-value>
    </context-param>
    <context-param>
        <description>The relative path to category images</description>
        <param-name>categoryImagePath</param-name>
        <param-value>img/categories/</param-value>
    </context-param>
    <filter>
        <filter-name>EncodingFilter</filter-name>
        <filter-class>by.epam.yummybook.filter.EncodingFilter</filter-class>
    </filter>
    <filter>
        <filter-name>SecurityFilter</filter-name>
        <filter-class>by.epam.yummybook.filter.SecurityFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>SecurityFilter</filter-name>
        <url-pattern>/pages/admin/viewCustomers.jsp</url-pattern>
        <url-pattern>/pages/admin/viewOrders.jsp</url-pattern>
        <url-pattern>/pages/admin_welcome.jsp</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>EncodingFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <servlet>
        <servlet-name>Controller</servlet-name>
        <servlet-class>by.epam.yummybook.controller.Controller</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Controller</servlet-name>
        <url-pattern>/Controller</url-pattern>
        <url-pattern>/pages/Controller</url-pattern>
        <url-pattern>/chooseLanguage</url-pattern>
        <url-pattern>/pages/chooseLanguage</url-pattern>
        <url-pattern>/pages/admin/chooseLanguage</url-pattern>
        <url-pattern>/pages/admin/Controller</url-pattern>
        <url-pattern>/pages/category</url-pattern>
        <url-pattern>/pages/clearCart</url-pattern>
        <url-pattern>/home</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <error-page>
        <error-code>404</error-code>
        <location>/pages/errors/404.jsp</location>
    </error-page>
    <error-page>
        <error-code>500</error-code>
        <location>/pages/errors/500.jsp</location>
    </error-page>
    <jsp-config>
        <jsp-property-group>
            <description>JSP configuration for the store front</description>
            <url-pattern>/home</url-pattern>
            <url-pattern>/jspf/error/*</url-pattern>
        </jsp-property-group>
    </jsp-config>
    <welcome-file-list>
        <welcome-file>home</welcome-file>
    </welcome-file-list>
</web-app>
